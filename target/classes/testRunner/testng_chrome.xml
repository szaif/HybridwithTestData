        <classes>
            <class name="opencart.tests.LoginPageTest"/>
        </classes>
    </test>
    <test name = "Accounts PageTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="opencart.tests.AccountsPageTest"/>
        </classes>
    </test>
    <test name = "Search Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="opencart.tests.SearchTest"/>
        </classes>
    </test>
    <test name = "Product Info Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="opencart.tests.ProductInfoPageTest"/>
        </classes>
    </test>
</suite>